<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/list_vertical_margin"
    android:layout_marginLeft="@dimen/list_vertical_margin"
    android:layout_marginEnd="@dimen/list_vertical_margin"
    android:layout_marginRight="@dimen/list_vertical_margin"
    android:layout_marginTop="@dimen/list_horizontal_margin"
    android:layout_marginBottom="@dimen/list_horizontal_margin" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/ivCSixImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/logo"
            android:src="@drawable/csix_logo" />

        <TextView
            android:id="@+id/tvAboutTitle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/ivCSixImage"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@id/ivCSixImage"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@color/main_darker" />

        <TextView
            android:id="@+id/tvAboutContent"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tvAboutTitle"
            android:layout_below="@id/tvAboutTitle"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:lineSpacingMultiplier="@fraction/detail_body_line_spacing_multiplier" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
