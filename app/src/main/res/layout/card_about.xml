<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_side_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivCSixImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/logo"
                android:src="@drawable/csix_logo" />

            <TextView
                android:id="@+id/tvAboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/ivCSixImage"
                android:layout_marginStart="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:layout_toEndOf="@id/ivCSixImage"
                android:textColor="@color/main_darker"
                android:textSize="@dimen/abc_text_size_body_2_material"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAboutContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tvAboutTitle"
                android:layout_below="@id/tvAboutTitle"
                android:layout_centerVertical="true"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textSize="16sp"
                android:paddingBottom="8dp"
                android:layout_marginBottom="8dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>