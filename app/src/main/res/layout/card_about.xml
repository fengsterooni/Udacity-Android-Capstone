<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/card_horizontal_margin"
    android:layout_marginLeft="@dimen/card_horizontal_margin"
    android:layout_marginEnd="@dimen/card_horizontal_margin"
    android:layout_marginRight="@dimen/card_horizontal_margin"
    android:layout_marginTop="@dimen/card_vertical_margin"
    android:layout_marginBottom="@dimen/card_vertical_margin"
    android:contentDescription="@string/card_view_about">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/card_view_about_layout">

        <ImageView
            android:id="@+id/ivCSixImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="8dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/card_view_about_logo"
            android:src="@drawable/csix_logo" />

        <TextView
            android:id="@+id/tvAboutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/ivCSixImage"
            android:layout_marginLeft="@dimen/list_margin"
            android:layout_marginStart="@dimen/list_margin"
            android:layout_toEndOf="@id/ivCSixImage"
            android:layout_toRightOf="@id/ivCSixImage"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
            android:textColor="@color/main_darker"
            android:contentDescription="@string/card_view_about_title" />

        <TextView
            android:id="@+id/tvAboutContent"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tvAboutTitle"
            android:layout_alignLeft="@id/tvAboutTitle"
            android:layout_below="@id/tvAboutTitle"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="@dimen/list_margin"
            android:lineSpacingMultiplier="@fraction/detail_body_line_spacing_multiplier"
            android:contentDescription="@string/card_view_about_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
