<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageView
        android:layout_width="@dimen/direction_image_size"
        android:layout_height="@dimen/direction_image_size"
        android:adjustViewBounds="true"
        android:background="@color/green"
        android:contentDescription="@string/image_parking"
        android:scaleType="fitCenter"
        android:src="@drawable/lowerparking2"
        android:layout_gravity="right|top" />

    <ImageView
        android:layout_width="@dimen/direction_image_size"
        android:layout_height="@dimen/direction_image_size"
        android:adjustViewBounds="true"
        android:background="@color/blue"
        android:contentDescription="@string/image_lifehouse"
        android:scaleType="fitCenter"
        android:src="@drawable/lifehouse2"
        android:layout_gravity="left|bottom" />

    <ImageView
        android:layout_width="@dimen/direction_image_size"
        android:layout_height="@dimen/direction_image_size"
        android:adjustViewBounds="true"
        android:background="@color/purple"
        android:contentDescription="@string/image_church"
        android:scaleType="fitCenter"
        android:src="@drawable/church2"
        android:layout_gravity="right|bottom" />

</FrameLayout>