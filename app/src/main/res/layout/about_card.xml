<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_side_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/ivCSixImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/logo"
                android:src="@drawable/csix_logo" />

            <TextView
                android:id="@+id/tvAboutTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/ivCSixImage"
                android:layout_toEndOf="@id/ivCSixImage"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:textColor="@color/main_darker"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

            <TextView
                android:id="@+id/tvAboutContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/tvAboutTitle"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_below="@id/tvAboutTitle"
                android:layout_centerVertical="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>